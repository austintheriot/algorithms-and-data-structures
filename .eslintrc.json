{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": ["**/*.test.js"],
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-tabs": "off",
    "no-plusplus": "off",
    "eqeqeq": "off",
    "max-classes-per-file": "off"
  }
}
