{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"allowJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"baseUrl": "src",
		"paths": {
			"utils/*": ["./utils/*"]
		}
	},
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Recommended"
}
